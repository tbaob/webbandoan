@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<html>
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-white">
    <!-- Header -->
    <div class="bg-black text-white flex justify-between items-center p-4">
        <div class="flex space-x-4">
            <a class="hover:underline" href="#">
                Đặt Ngay
            </a>
            <a class="hover:underline" href="#">
                Giao Hàng
            </a>
            <a class="hover:underline" href="#">
                hoặc Mang đi
            </a>
        </div>
        <button class="bg-red-600 px-4 py-2 rounded-full">
            Bắt đầu đặt hàng
        </button>
    </div>
    <!-- Main Content -->
    <div class="container mx-auto mt-8">
        <div class="text-gray-600 mb-4">
            Món Mới &gt; 1 Burger Bánh Mì
        </div>
        <div class="flex">
            <!-- Image Section -->
            <div class="w-1/2">
                <img alt="Burger Bánh Mì with a flag on top, placed on a paper with text" class="rounded-lg shadow-lg" height="400" src="https://storage.googleapis.com/a1aa/image/EG9YlA7bEe3gJyuYqmL1hWSkiugOhSvxssSAiAVSaYMgoMzJA.jpg" width="600" />
            </div>
            <!-- Description Section -->
            <div class="w-1/2 flex items-center justify-center">
                <div class="bg-white shadow-lg rounded-lg p-8 w-3/4">
                    <div class="flex items-center mb-4">
                        <div class="bg-red-600 h-8 w-1 mr-2">
                        </div>
                        <h2 class="text-2xl font-bold">
                            1 BURGER BÁNH MÌ
                        </h2>
                    </div>
                    <p class="text-gray-600 mb-4">
                        1 Burger Bánh Mì
                    </p>
                    <button class="bg-gray-300 text-gray-600 px-4 py-2 rounded-full w-full">
                        Thêm
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
