@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<html>
<head>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-white">
    <!-- Header -->
    <div class="bg-black text-white flex justify-between items-center p-4">
        <div class="flex space-x-4">
            <a class="hover:underline" href="#">
                Đặt Ngay
            </a>
            <a class="hover:underline" href="#">
                Giao Hàng
            </a>
            <a class="hover:underline" href="#">
                hoặc Mang đi
            </a>
        </div>
        <button class="bg-red-600 px-4 py-2 rounded">
            Bắt đầu đặt hàng
        </button>
    </div>
    <!-- Breadcrumb -->
    <div class="text-gray-500 text-sm mt-4 ml-4">
        Ưu Đãi &gt; Bữa Xế Ngọt Ngào
    </div>
    <!-- Main Content -->
    <div class="flex justify-center items-center mt-8">
        <!-- Image Section -->
        <div class="w-1/2 flex justify-center">
            <img alt="KFC Snack Time promotion with Lipton drinks, egg tarts, and cheese balls" class="rounded-lg" height="400" src="https://storage.googleapis.com/a1aa/image/uOWedUS5wnQsaq6rp3xoZKsEQp3T4NHhocEUUrsi6Fn35WzJA.jpg" width="600" />
        </div>
        <!-- Description Section -->
        <div class="w-1/2 flex justify-center">
            <div class="bg-white shadow-lg rounded-lg p-8">
                <div class="flex items-center mb-4">
                    <div class="bg-red-600 h-8 w-2 mr-2">
                    </div>
                    <h1 class="text-2xl font-bold">
                        BỮA XẾ NGỌT NGÀO
                    </h1>
                </div>
                <p class="text-gray-700 mb-4">
                    4 Bánh trứng + 4 Phô mai viên + 2 trà Lipton (Lớn)
                </p>
                <button class="bg-gray-300 text-gray-700 px-4 py-2 rounded">
                    Thêm
                </button>
            </div>
        </div>
    </div>
</body>
</html>


